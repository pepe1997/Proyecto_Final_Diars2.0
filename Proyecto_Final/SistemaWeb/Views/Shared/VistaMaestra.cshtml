                        </div>
                    </div>
                    <!-- Primera division -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 order-lg-2 order-xl-1">
                            <div class="card">
                                <div class="d-flex card-header justify-content-between align-items-center">
                                    <label for="">
                                        <h4>Formulario Cliente</h4>
                                    </label>
                                    <a href="/HTML/Clientes/agregar-cliente.html"
                                       class="btn bg-primary ms-1 me-1 mt-1 mb-1">
                                        <i class="fa-solid fa-arrows-rotate text-white"></i>
                                    </a>
                                </div>
                                <div class="card-body pt-0">
                                    <!-- Formulario Cliente -->
                                    <!-- Vald01 -->
                                    <form class="row g-3">
                                        <div class="col-md-4">
                                            <label for="validationDefault01" class="form-label">Nombres</label>
                                            <input type="text" class="form-control" id="validationDefault01"
                                                   placeholder="Nombres" required>
                                        </div>
                                        <!-- Vald02 -->
                                        <div class="col-md-4">
                                            <label for="validationDefault02" class="form-label">Apellidos</label>
                                            <input type="text" class="form-control" id="validationDefault02"
                                                   placeholder="Apellidos" required>
                                        </div>
                                        <!-- Vald03 -->
                                        <div class="col-md-4">
                                            <label for="validationDefault03" class="form-label">DNI</label>
                                            <input type="text" class="form-control" data-mask="00000000"
                                                   placeholder="44444444" autocomplete="off" maxlength="8"
                                                   id="validationDefault03" required>
                                        </div>
                                        <!-- Vald04 -->
                                        <div class="col-md-5">
                                            <label for="validationDefault04" class="form-label">
                                                Fecha de
                                                Nacimiento
                                            </label>
                                            <input type="date" class="form-control" data-mask="00/00/0000"
                                                   autocomplete="off" maxlength="10" id="validationDefault04" required>
                                        </div>
                                        <!-- Vald05 -->
                                        <div class="col-md-3">
                                            <label for="validationDefault05" class="form-label">Género</label>
                                            <select class="form-select" id="validationDefault05" required>
                                                <option selected disabled value="">Selecionar</option>
                                                <option>Masculino</option>
                                                <option>Femenino</option>
                                                <option>Otros</option>
                                            </select>
                                        </div>
                                        <!-- Vald06 -->
                                        <div class="col-md-4">
                                            <label for="validationDefault06" class="form-label">Teléfono</label>
                                            <input type="text" class="form-control" data-mask="000000000"
                                                   autocomplete="off" maxlength="9" placeholder="999999999"
                                                   id="validationDefault06" required>
                                        </div>
                                        <!-- Vald07 -->
                                        <div class="col-12">
                                            <label for="validationDefault07" class="form-label">Dirección</label>
                                            <input type="text" class="form-control" placeholder="test@ejemplo.com"
                                                   id="validationDefault07" required>
                                        </div>
                                        <!-- Vald08 -->
                                        <div class="col-md-6">
                                            <label for="validationDefault08" class="form-label">
                                                Correo
                                                Electrónico
                                            </label>
                                            <input type="text" class="form-control" name="validation-email"
                                                   placeholder="test@ejemplo.com" id="validationDefault08" required>
                                        </div>
                                        <!-- Vald09 -->
                                        <div class="col-md-3">
                                            <label for="validationDefault09" class="form-label">Contraseña</label>
                                            <input type="password" class="form-control" name="validation-password"
                                                   placeholder="Contraseña" id="validationDefault09" required>
                                        </div>
                                        <!-- Vald10 -->
                                        <div class="col-md-3">
                                            <label for="validationDefault10" class="form-label">
                                                Confirmar
                                                Contraseña
                                            </label>
                                            <input type="password" class="form-control"
                                                   name="validation-password-confirmation"
                                                   placeholder="Confirmar contraseña" id="validationDefault10" required>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value=""
                                                       id="invalidCheck2" required>
                                                <label class="form-check-label" for="invalidCheck2">
                                                    Acepto los términos y condiciones
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <button class="btn btn-primary" type="submit">Registrar Cliente</button>
                                        </div>
                                    </form>
                                </div> <!-- end card-body-->
                            </div> <!-- end card-->
                        </div>
                    </div>
                </div>
            </div>

